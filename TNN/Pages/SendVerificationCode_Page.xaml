<Page x:Class="TNN.Pages.SendVerificationCode_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNN.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="568"
      Title="Восстановление пароля">

    <Grid x:Name="VerCodeGrid" >
        <Label x:Name="VerCode_lbl" Content="" Margin="0,141,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"  HorizontalContentAlignment="Center"/>
        <TextBox  x:Name="VerCode_txtbox" HorizontalAlignment="Center" Height="34" Margin="0,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="Next" Content="Далее" HorizontalAlignment="Center" Margin="299,232,188,0" VerticalAlignment="Top" Width="75" BorderBrush="{x:Null}" Height="33" Click="Next_Click"/>
        <Button x:Name="Cancel" Content="Отмена" HorizontalAlignment="Center" Margin="188,232,299,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click" BorderBrush="{x:Null}" Height="33"/>

    </Grid>
</Page>
