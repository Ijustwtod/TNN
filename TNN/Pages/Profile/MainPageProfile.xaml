<Page x:Class="TNN.Pages.Profile.MainPageProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNN.Pages.Profile"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPageProfile">

    <Grid>
        <Image x:Name="PhotoProfile" Stretch="Fill" Margin="10,10,0,0" HorizontalAlignment="Left" Width="200" Height="200" VerticalAlignment="Top" >
            <Image.Clip>
                <EllipseGeometry
                  RadiusX="100"
                  RadiusY="100"
                  Center="100,100"/>
            </Image.Clip>
        </Image>
        
        <Label x:Name="FullName" Content="FullName" HorizontalAlignment="Left" Margin="250,30,0,0" VerticalAlignment="Top"  FontSize="18" />
        <Label x:Name="Group" Content="Group" HorizontalAlignment="Left" Margin="250,64,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Edit" Style="{StaticResource ResourceKey=BaseButton}" Content="Редактировать" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Width="200" Height="30" Click="Edit_Click"/>
    </Grid>
</Page>
